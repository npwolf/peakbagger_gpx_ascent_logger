{
  "manifest_version": 3,
  "name": "Peakbagger GPX Ascent Logger",
  "version": "0.0.2",
  "description": "Automatically draft Peakbagger.com ascent records using GPX files.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage", "downloads"],
  "host_permissions": [
    "https://peakbagger.com/Default.aspx",
    "https://peakbagger.com/m/ps.aspx*",
    "https://peakbagger.com/m/pt.ashx*",
    "https://www.alltrails.com/explore/recording/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://peakbagger.com/climber/ascentedit.aspx*"],
      "js": ["gpx-utils.js", "content.js"]
    },
    {
      "matches": [
        "https://gaiagps.com/*",
        "https://*.gaiagps.com/*",
        "https://strava.com/*",
        "https://*.strava.com/*",
        "https://alltrails.com/*",
        "https://*.alltrails.com/*",
        "https://caltopo.com/*",
        "https://*.caltopo.com/*"
      ],
      "js": ["download-gpx-content.js"]
    }
  ]
}
